<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.syj.memo.user.repository.UserRepository">
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `name`
			, `email`
		)
		VALUE
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
		)
	</insert>
	
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.syj.memo.user.domain.User">
		SELECT
			`id`
			, loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
		 	`user`
		WHERE
		  	`loginId` = #{loginId}
		  	AND `password` = #{password}
	</select>

</mapper>